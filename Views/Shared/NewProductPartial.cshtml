@model MainModel

<div class="container">
        <h1>New Product</h1>
        <form asp-controller="Products" asp-action="Create">

        <div class="form-group">
            <span class="text-danger" asp-validation-for="Product.Name"></span>
            <label asp-for="Product.Name">Name</label>
            <input type="text" class="form-control" asp-for="Product.Name" placeholder="Name">
        </div>

        <div class="form-group">
            <span class="text-danger" asp-validation-for="Product.Description"></span>
            <label asp-for="Product.Description">Description</label>
            <input type="text-area" class="form-control" asp-for="Product.Description" placeholder="Description">
        </div>

        <div class="form-group">
            <span class="text-danger" asp-validation-for="Product.Price"></span>
            <label asp-for="Product.Price">Price</label>
            <input type="number" class="form-control" asp-for="Product.Price" placeholder="Price">
        </div>
       
        <button type="submit" class="btn btn-md btn-primary">Create</button>
        <a class="btn btn-md btn-secondary " asp-controller="Products" asp-action="All">Cancel</a>

    </form>
    
</div>
